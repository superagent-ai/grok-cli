{
  "name": "@defai.digital/ax-cli",
  "version": "0.2.2",
  "description": "Enterprise-Class AI Command Line Interface - Primary support for GLM (General Language Model) with multi-provider AI orchestration powered by AutomatosX.",
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "main": "dist/index.js",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "bin": {
    "ax-cli": "dist/index.js"
  },
  "scripts": {
    "build": "tsc",
    "build:bun": "bun run tsc",
    "dev": "bun run src/index.ts",
    "dev:node": "tsx src/index.ts",
    "start": "node dist/index.js",
    "start:bun": "bun run dist/index.js",
    "lint": "eslint . --ext .js,.jsx,.ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "install:bun": "bun install"
  },
  "keywords": [
    "cli",
    "agent",
    "text-editor",
    "automatosx",
    "ai",
    "orchestration"
  ],
  "author": "Your Name",
  "license": "MIT",
  "dependencies": {
    "@ax-cli/schemas": "workspace:*",
    "@modelcontextprotocol/sdk": "^1.17.0",
    "axios": "^1.7.0",
    "cfonts": "^3.3.0",
    "chalk": "^5.3.0",
    "commander": "^12.0.0",
    "dotenv": "^16.4.0",
    "enquirer": "^2.4.1",
    "fs-extra": "^11.2.0",
    "ink": "^4.4.1",
    "marked": "^15.0.12",
    "marked-terminal": "^7.3.0",
    "openai": "^5.10.1",
    "react": "^18.3.1",
    "ripgrep-node": "^1.0.0",
    "tiktoken": "^1.0.21",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.2",
    "@types/marked-terminal": "^6.1.1",
    "@types/node": "^24.0.0",
    "@types/react": "^18.3.3",
    "@typescript-eslint/eslint-plugin": "^8.37.0",
    "@typescript-eslint/parser": "^8.37.0",
    "@vitest/coverage-v8": "^4.0.10",
    "@vitest/ui": "^4.0.10",
    "eslint": "^9.31.0",
    "tsx": "^4.0.0",
    "typescript": "^5.3.3",
    "vitest": "^4.0.10"
  },
  "engines": {
    "node": ">=24.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/defai-digital/ax-cli.git"
  },
  "bugs": {
    "url": "https://github.com/defai-digital/ax-cli/issues"
  },
  "homepage": "https://github.com/defai-digital/ax-cli#readme",
  "preferGlobal": true
}
